				var checkbox = document.getElementById('facebook');
				checkbox.onchange = function(){
					if(this.checked){
						$('#fbcolumn').addClass('well')
						$('#fbcolumn').removeClass('hidden')
					}else{
						$('#fbcolumn').addClass('hidden')
						$('#fbcolumn').removeClass('well')
					}
