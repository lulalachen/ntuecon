			})
		</script>
		
		<!-- LOCAL INFORMATION -->
		<div class="ui grid centered" style="padding-top:10px">

<%=name%>
			<div class="ten wide column">
				<div class="ui secondary pointing menu">
				  	<a class=" item" href="/">
				    	<i class="home icon"></i> Home
				  	</a>
				  	<div class="right menu">
				    	<div class="item">
				    		<div class="ui icon input">
						        <input type="text" placeholder="請輸入學號或姓名" id="input">
						        <i class="search link icon" id="submit"></i>
						    </div>
				    		<form action="/search" method="post" id="getId" hidden=1>
				    			<div class="ui search">
								  	<div class="ui icon input thin">
								    	<input class="prompt" type="text" placeholder="Common passwords..." name="input" id="sync">
								    	<i class="search icon"></i>
								  	</div>
								  	<div class="results"></div>
								</div>
					      		<script>
					      		$("#submit").click(function(){
					      			console.log($("#input").val())
					      			var input = $("#input").val()
					      			$("#sync").val(input);
					      			console.log($("sync").val())
									$("#getId").submit();
								});
					      		</script>
				      		</form>
				    	</div>
					</div>
				</div>
				<div class="ui grid" style="padding-top:30px">
					<div class="ui centered eight wide column">

						<form action="/suggest" method="post" class="ui form">
							<h1 class="ui dividing header">問題</h1>
						        <div class="field">
								   <label>姓名</label>
						          <input type="text" name="name" placeholder="名字">
						        </div>
						        <div class="field">
								   <label>學號</label>
						          <input type="text" name="student_id" placeholder="學號">
						        </div>
						        <div class="inline fields">
								    <label for="subject">問題分類</label>
								    <div class="field">
								      <div class="ui radio checkbox">
								        <input type="radio" name="subject" >
								        <label>畢冊相關</label>
								      </div>
								    </div>
								    <div class="field">
								      <div class="ui radio checkbox">
								        <input type="radio" name="subject" > 
								        <label>團拍相關</label>
								      </div>
								    </div>
								    <div class="field">
								      <div class="ui radio checkbox">
								        <input type="radio" name="subject" >
								        <label>繳交資料</label>
								      </div>
								    </div>
								    <div class="field">
								      <div class="ui radio checkbox">
								        <input type="radio" name="subject" checked="">
								        <label>其他</label>
								      </div>
								    </div>
							    </div>
						    	<div class="field">
								    <label>你的建議</label>
								    <input type="text" name="comment" name="comment"></input>
							  	</div>
